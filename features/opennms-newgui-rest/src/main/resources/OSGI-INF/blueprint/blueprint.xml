<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <reference id="locationAwareSnmpClient" interface="org.opennms.netmgt.snmp.proxy.LocationAwareSnmpClient" availability="mandatory"/>
    <reference id="locationAwarePingClient" interface="org.opennms.netmgt.icmp.proxy.LocationAwarePingClient" availability="mandatory"/>

    <!-- The state manager will manually pull properties from the configuration file -->
    <bean id="nodeDiscoverRestService" class="org.opennms.features.newgui.rest.impl.NodeDiscoverServiceImpl">
        <argument ref="locationAwarePingClient" />
        <argument ref="locationAwareSnmpClient" />
    </bean>
    <service interface="org.opennms.features.newgui.rest.NodeDiscoverRestService" ref="nodeDiscoverRestService">
        <service-properties>
            <entry key="application-path" value="/rest"/>
        </service-properties>
    </service>
</blueprint>