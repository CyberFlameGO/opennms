<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="locationAwareSnmpClient" interface="org.opennms.netmgt.snmp.proxy.LocationAwareSnmpClient"
               availability="mandatory"/>
    <reference id="locationAwarePingClient" interface="org.opennms.netmgt.icmp.proxy.LocationAwarePingClient"
               availability="mandatory"/>
    <reference id="requisitionService" interface="org.opennms.web.svclayer.api.RequisitionAccessService" />
    <reference id="eventForwarder" interface="org.opennms.netmgt.events.api.EventForwarder"/>

    <!-- The state manager will manually pull properties from the configuration file -->
    <bean id="nodeDiscoverRestService" class="org.opennms.features.newgui.rest.impl.NodeDiscoverServiceImpl">
        <argument ref="locationAwarePingClient"/>
        <argument ref="locationAwareSnmpClient"/>
        <argument ref="requisitionService" />
        <argument ref="eventForwarder" />
    </bean>
    <service interface="org.opennms.features.newgui.rest.NodeDiscoverRestService" ref="nodeDiscoverRestService">
        <service-properties>
            <entry key="application-path" value="/rest"/>
        </service-properties>
    </service>
</blueprint>